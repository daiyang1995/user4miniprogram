/**app.wxss**/

/* 字体设置 */
@font-face {
    font-family: fullIconAll;
    src: url(http://wx-test.melktech.com/b2c/stylesheets/ziti/fullIconAll.woff);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.ui-grid-a,.ui-grid-b,.ui-grid-c{
  display: block;
  width: 100%;
  box-sizing: border-box;
}

.ui-grid-a>.ui-block-a,.ui-grid-a>.ui-block-b{
  width: 50%;
  display: inline-block;
  box-sizing: border-box;
}
.ui-grid-b>.ui-block-a,.ui-grid-b>.ui-block-b,.ui-grid-b>.ui-block-c{
  width: 33.3%;
  display: inline-block;
  box-sizing: border-box;
}
.ui-grid-c>.ui-block-a,
.ui-grid-c>.ui-block-b,
.ui-grid-c>.ui-block-c,
.ui-grid-c>.ui-block-d{
  width: 25%;
  display: inline-block;
  box-sizing: border-box;
}

.footer{
    background-color: #FFFFFF;
    position: fixed;
    text-align: center;
    bottom:  0;
    font-size: 32rpx;
    border: none;
    width: 100%;
    height: 85.6rpx;
    line-height: 85.6rpx;
}